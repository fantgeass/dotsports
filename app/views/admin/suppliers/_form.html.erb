<div data-hook="admin_supplier_form_fields">
  <%= f.field_container :name do %>
    <%= f.label :name %> <span class="required">*</span><br />
    <%= f.text_field :name %>
    <%= error_message_on :supplier, :name %>
  <% end %>

  <%= f.field_container :juridical_name do %>
    <%= f.label :juridical_name %><br />
    <%= f.text_field :juridical_name %>
  <% end %>

  <%= f.field_container :ownership_type do %>
    <%= f.label :ownership_type %><br />
    <%= f.select :ownership_type, Supplier::OWNERSHIP_TYPES.map{ |type| [t("supplier_ownership_types.#{type}"), type]}, {:include_blank => true} %>
  <% end %>

  <% [:inn, :kpp, :ogrn, :juridical_address, :address, :phone, :representative_position, :representative_name, :account, :bank, :correspondent_account, :bik].each do |attribute| %>
    <%= f.field_container attribute do %>
      <%= f.label attribute %><br />
      <%= f.text_field attribute %>
    <% end %>
  <% end %>

  <%= f.field_container :manager_contacts do %>
    <%= f.label :manager_contacts %><br />
    <%= f.text_area :manager_contacts %>
  <% end %>

</div>